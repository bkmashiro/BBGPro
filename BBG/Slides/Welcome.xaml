<Page x:Class="BBG.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BBG"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Window1"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <TextBlock Text="{DynamicResource welcome_title}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="35"
                   Margin="10,31,0,0" />
        <TextBlock Text="{DynamicResource welcome_youcan}"
                   Margin="32,81,0,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="25"
                   RenderTransformOrigin="0.431,1.512" />
        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                ToolTip="{DynamicResource welcome_know_more_tt}"
                Content="{DynamicResource welcome_know_more}"
                Margin="300,0,300,37"
                VerticalAlignment="Bottom"
                d:LayoutOverrides="Height"
                Name="learn_more"
                Click="learn_more_Click" />
        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                ToolTip="{DynamicResource welcome_start_tt}"
                Content="{DynamicResource welcome_start}"
                Margin="200,0,200,118"
                x:Name="start"
                Click="start_Click"
                IsDefault="True"
                VerticalAlignment="Bottom"
                d:LayoutOverrides="VerticalAlignment" />
    </Grid>
</Page>
